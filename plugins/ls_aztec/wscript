#!/usr/bin/env python


def configure(ctx):
  ctx.env.m_mlibraries.append('ls_aztec')
  ctx.env['LIB_AZTEC']     = ['aztec']
  ctx.env['CPPPATH_AZTEC'] = ['/home/pedro/workspace/m/plugins/ls_aztec/aztec']
  ctx.env['LIBPATH_AZTEC'] = ctx.env['CPPPATH_AZTEC']
  ctx.env['RPATH_AZTEC']   = ctx.env['CPPPATH_AZTEC']


def build(ctx):
  ctx.new_task_gen(
    features = 'cxx cshlib',
    name     = 'ls_aztec',
    target   = 'ls_aztec',
    includes = ['.','../../mkernel'],
    source   = ['ls_aztec.cpp'],
    uselib   = ['AZTEC'] )

